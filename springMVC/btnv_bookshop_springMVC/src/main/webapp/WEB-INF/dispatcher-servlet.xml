<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                           http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!-- Cấu hình component-scan để Spring tìm kiếm các controller -->
    <mvc:annotation-driven />
    <context:component-scan base-package="com.bookshop.controller.resources" /> <!-- Cấu hình view resolver để hiển thị JSP -->

    <!-- Cấu hình phục vụ các tài nguyên tĩnh từ thư mục /static -->
    <mvc:resources mapping="/static/**" location="/static/" />

    <!-- Cấu hình View Resolver để hiển thị JSP -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>
</beans>
